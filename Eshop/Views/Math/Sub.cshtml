@model Numbers

@using (@Html.BeginForm("MakeSub","Math",FormMethod.Post)) 
{
<table class="table table-striped table-hover table-sm">
    <tr>
        <td>FirstNummber</td>
        <td>@Html.TextBoxFor(x => x.FirstNumber, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>SecondNummber</td>
        <td>@Html.TextBoxFor(x => x.SecondNumber,new { @class="form-control"})</td>
    </tr>
    
</table>   
<tr>
    <td>
        <input type="submit" name="name" value="Sub" class="btn btn-primary" />
    </td>
</tr> 
}